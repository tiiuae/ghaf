+static int avt_s_ctrl(struct v4l2_ctrl *ctrl)
+{
+	struct v4l2_subdev *sd;
+	struct v4l2_ext_control c;
+
+	struct avt_csi2_priv *priv;
+
+	if (ctrl->flags & V4L2_CTRL_FLAG_INACTIVE)
