+static bool device_present(struct i2c_client *client)
+{
+    int status = 0;
+    u64 data = 0;
+
+    status = i2c_read(client, CCI_DEVICE_CAP_64R, AV_CAM_REG_SIZE, AV_CAM_DATA_SIZE_64,  (char *)&data);
+
+    return ((status < 0) || (data == 0)) ? false : true;
+}
