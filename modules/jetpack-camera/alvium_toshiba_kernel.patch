+
+	if(priv->ignore_control_write) {
+		return 0;
+	}
+
+	c.id = ctrl->id;
+	c.value = ctrl->val;
+	/* For 64-bit extended V4L2 controls,
+	 * new value comes in this pointer
+	 */
+	c.value64 = *(ctrl->p_new.p_s64);
+
+	return avt_ioctl_s_ctrl(sd, &c);
