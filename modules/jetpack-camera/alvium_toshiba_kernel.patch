+		reg = BCRM_DIGITAL_BINNIG_MODE_8RW;
+		length = AV_CAM_DATA_SIZE_8;
+		break;
+	default:
+		avt_err(sd, "case default or not supported\n");
+		return -EINVAL;
+	}
+
+	CLEAR(bcrm_v4l2);
+	CLEAR(qctrl);
+	CLEAR(qctrl_ext);
+
+	qctrl.id = vc->id;
+	qctrl_ext.id = vc->id;
+	if(length == AV_CAM_DATA_SIZE_64){
+		/* 64 bit ext control */
+		ret = ioctl_queryctrl64(sd, &qctrl_ext);
+		if (ret < 0) {
